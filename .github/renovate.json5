{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:base",
  ],
  timezone: "Asia/Tokyo",
  dependencyDashboard: true,
  labels: ["renovate"],
  packageRules: [
    {
      matchUpdateTypes: ["pin"],
      automerge: true,
    },
    {
      matchFiles: ["package.json"],
      matchUpdateTypes: ["minor"],
      automerge: true,
      stabilityDays: 7,
    },
    {
      matchFiles: ["package.json"],
      matchUpdateTypes: ["patch"],
      automerge: true,
      stabilityDays: 3,
    },
  ],
}
